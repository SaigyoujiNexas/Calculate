<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282B32"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/figure_recyclerView_horizontal"
        android:layout_width="match_parent"
        android:background="#282B32"
        android:layout_height="0dp"
        android:layout_weight="24"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inputView_horizontal"
        android:layout_width="match_parent"
        android:layout_height= "0dp"
        android:layout_weight="15"
        android:gravity="end"
        app:autoSizeMaxTextSize="50sp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1sp"
        android:background="#282B32"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#20232A"
        android:layout_weight="62">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent=".125"
            android:orientation="vertical"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_2_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".25"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_3_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".375"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_4_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_5_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".625"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_6_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".75"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_7_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".875"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_8_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".25"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_9_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".50"
            />
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guideline_10_horizontal"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".75"
            />
        <Button
            android:text="C"
            android:textColor="#8EA1AA"
            android:textSize="25sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button_clean_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_4_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_5_horizontal"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:text="â†"

            android:textColor="#8EA1AA"
            android:textSize="25sp"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button_back_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@+id/guideline_1_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <Button
            android:text="%"

            android:textColor="#8EA1AA"
            android:textSize="25sp"
            android:id="@+id/button_percent_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_7_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            />

        <Button
            android:textColor="#8EA1AA"
            android:id="@+id/button_derive_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_4_horizontal"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal" />
        <Button

            android:id="@+id/button_7_horizontal"
            android:text="7"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1_horizontal"
            />

        <Button
            android:id="@+id/button_8_horizontal"
            android:text="8"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_2_horizontal"
            />
        <Button
            android:id="@+id/button_9_horizontal"
            android:text="9"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_3_horizontal"
            />
        <Button
            android:textColor="#8EA1AA"
            android:id="@+id/buttton_multiply_horizontal"
            android:text="*"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_4_horizontal"
            />
        <Button
            android:id="@+id/button_4_horizontal"
            android:text="4"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1_horizontal"
            />
        <Button
            android:text="5"
            android:textSize="25sp"
            android:id="@+id/button_5_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_2_horizontal"
            />
        <Button
            android:id="@+id/button_6_horizontal"
            android:text="6"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_3_horizontal"
            />
        <Button
            android:id="@+id/button_reduce_horizontal"

            android:textColor="#8EA1AA"
            android:text="-"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_4_horizontal"
            />
        <Button
            android:text="1"
            android:textSize="25sp"
            android:id="@+id/button_1_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1_horizontal"
            />

        <Button
            android:id="@+id/button_2_horizontal"
            android:text="2"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_2_horizontal"
            />

        <Button
            android:text="3"
            android:textSize="25sp"
            android:id="@+id/button_3_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_3_horizontal"
            />

        <Button
            android:text="+"

            android:textColor="#8EA1AA"
            android:textSize="25sp"
            android:id="@+id/button_add_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_4_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="("
            android:textSize="25sp"
            android:id="@+id/button_left_brackets_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_5_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_6_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text=")"
            android:textSize="25sp"
            android:id="@+id/button_right_brackets_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_6_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_7_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="sin"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_sin_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_5_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_6_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="cos"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_cos_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_5_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_6_horizontal"
            />

        <Button

            android:textColor="#8EA1AA"
            android:text="tan"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_tan_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_5_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_6_horizontal"
            />

        <Button

            android:textColor="#8EA1AA"
            android:text="\u03C0"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_pi_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_8_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_6_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_7_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="e"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_e_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_6_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_7_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="G"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_G_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_6_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_7_horizontal"
            />

        <Button
            android:text="0"
            android:textSize="25sp"
            android:id="@+id/button_0_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_2_horizontal"
            />

        <Button
            android:text="."
            android:textSize="25sp"
            android:id="@+id/button_point_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_3_horizontal"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="^2"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_square_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_9_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_7_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Button
            android:textColor="#8EA1AA"
            android:text="^3"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_cube_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_9_horizontal"
            app:layout_constraintBottom_toBottomOf="@id/guideline_10_horizontal"
            app:layout_constraintLeft_toLeftOf="@id/guideline_7_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Button
            android:textColor="#8EA1AA"
            android:text="^"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:id="@+id/button_exponent_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_10_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_7_horizontal"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Button
            android:textColor="#fff"
            android:id="@+id/button_equals_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="@id/guideline_8_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_4_horizontal"
            app:layout_constraintRight_toRightOf="@id/guideline_5_horizontal"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>