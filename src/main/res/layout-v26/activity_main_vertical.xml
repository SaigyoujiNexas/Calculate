<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282B32"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/figure_recyclerView"
        android:layout_width="match_parent"
        android:background="#282B32"
        android:layout_height="0dp"
        android:layout_weight="292"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/inputView"
        android:layout_width="match_parent"
        android:layout_height= "0dp"
        android:layout_weight="100"
        android:gravity="end"
        app:autoSizeMaxTextSize="50sp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="1sp"
        android:background="#282B32"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#20232A"
        android:layout_weight="618">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintGuide_percent=".25"
            android:orientation="vertical"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".50"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".75"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".20"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".40"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".60"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".80"
            />
        <Button
            android:text="C"
            android:textColor="#8EA1AA"
            android:textSize="32sp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button_clean"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:text="("

            android:textColor="#8EA1AA"
            android:textSize="32sp"

            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/button_left_brackets"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/guideline_1"
            app:layout_constraintRight_toRightOf="@+id/guideline_2"
            app:layout_constraintBottom_toBottomOf="@id/guideline_4"
            />
        <Button
            android:text=")"

            android:textColor="#8EA1AA"
            android:textSize="32sp"
            android:id="@+id/button_right_brackets"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2"
            app:layout_constraintRight_toRightOf="@id/guideline_3"
            app:layout_constraintBottom_toBottomOf="@id/guideline_4"
            />

        <Button
            android:textColor="#8EA1AA"
            android:id="@+id/button_derive"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="/"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@id/guideline_4"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/button_7"
            android:text="7"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_4"
            app:layout_constraintBottom_toBottomOf="@id/guideline_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1"
            />

        <Button
            android:id="@+id/button_8"
            android:text="8"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_4"
            app:layout_constraintBottom_toBottomOf="@id/guideline_5"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1"
            app:layout_constraintRight_toRightOf="@id/guideline_2"
            />
        <Button
            android:id="@+id/button_9"
            android:text="9"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_4"
            app:layout_constraintBottom_toBottomOf="@id/guideline_5"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2"
            app:layout_constraintRight_toRightOf="@id/guideline_3"
            />
        <Button
            android:textColor="#8EA1AA"
            android:id="@+id/buttton_multiply"
            android:text="*"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_4"
            app:layout_constraintBottom_toBottomOf="@id/guideline_5"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Button
            android:id="@+id/button_4"
            android:text="4"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_5"
            app:layout_constraintBottom_toBottomOf="@id/guideline_6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1"
            />
        <Button
            android:text="5"
            android:textSize="32sp"
            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_5"
            app:layout_constraintBottom_toBottomOf="@id/guideline_6"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1"
            app:layout_constraintRight_toRightOf="@id/guideline_2"
            />
        <Button
            android:id="@+id/button_6"
            android:text="6"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_5"
            app:layout_constraintBottom_toBottomOf="@id/guideline_6"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2"
            app:layout_constraintRight_toRightOf="@id/guideline_3"
            />
        <Button
            android:id="@+id/button_reduce"

            android:textColor="#8EA1AA"
            android:text="-"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_5"
            app:layout_constraintBottom_toBottomOf="@id/guideline_6"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Button
            android:text="1"
            android:textSize="32sp"
            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_6"
            app:layout_constraintBottom_toBottomOf="@id/guideline_7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1"
            />

        <Button
            android:id="@+id/button_2"
            android:text="2"
            android:textSize="32sp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_6"
            app:layout_constraintBottom_toBottomOf="@id/guideline_7"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1"
            app:layout_constraintRight_toRightOf="@id/guideline_2"
            />

        <Button
            android:text="3"
            android:textSize="32sp"
            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_6"
            app:layout_constraintBottom_toBottomOf="@id/guideline_7"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2"
            app:layout_constraintRight_toRightOf="@id/guideline_3"
            />

        <Button
            android:text="+"

            android:textColor="#8EA1AA"
            android:textSize="32sp"
            android:id="@+id/button_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_6"
            app:layout_constraintBottom_toBottomOf="@id/guideline_7"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3"
            app:layout_constraintRight_toRightOf="parent"
            />
        <Button

            android:textColor="#8EA1AA"
            android:text="←"
            android:textSize="32sp"
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/guideline_1"
            />

        <Button
            android:text="0"
            android:textSize="32sp"
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_1"
            app:layout_constraintRight_toRightOf="@id/guideline_2"
            />

        <Button
            android:text="."
            android:textSize="32sp"
            android:id="@+id/button_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_2"
            app:layout_constraintRight_toRightOf="@id/guideline_3"
            />
        <Button
            android:textColor="#fff"
            android:id="@+id/button_equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="="
            android:textSize="32sp"
            app:layout_constraintTop_toTopOf="@id/guideline_7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/guideline_3"
            app:layout_constraintRight_toRightOf="parent"
/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>